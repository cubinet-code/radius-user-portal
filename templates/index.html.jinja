<!DOCTYPE html>
<html>

<head>
    {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>User Portal</title>
    <link rel="apple-touch-icon" href="{{ url_for('static',filename='apple-touch-icon.png') }}">
    <link rel="icon" sizes="32x32" href="{{ url_for('static',filename='favicon-32x32.png') }}">

    {% block styles %}
        {{ bootstrap.load_css() }}
    {% endblock %}
    {% endblock %}
</head>

<body>

<main>
    {% block content %}
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            {% if config.LOGO_URL %}
                <img class="navbar-brand" src="{{ config.LOGO_URL }}" alt="" height="60">
            {% endif %}
            User Portal
        </div>
    </nav>
    
    <div class="container w-50 p-4 mt-4 bg-light rounded">

        {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
        <div class="alert alert-{{ messages.0.0 }} alert-dismissible fade show" role="alert">
            {% for category, message in messages %}
            {{ message }} </br>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endif %}
        {% endwith %}

        
        <form action="/" method="post">

            <div class="form-floating mb-3">
                <input class="form-control" type="text" id="username" name="username" value="{{ session.username }}"
                    {{ 'disabled readonly' if session.username}}>
                <label for="username">Username:</label>
            </div>

            <div class="form-floating mb-3 {{ "visually-hidden" if session.username}}">
                <input class="form-control" type="password" id="password" name="password" {{ 'disabled readonly' if session.username}}>
                <label for="password">Password:</label>
            </div>
            
            <div class="form-floating mb-3 {{ '' if session.username else 'visually-hidden'}}">
                <input class="form-control" type="text" id="session" name="session" {{ "disabled readonly" if session.username}}>
                <label for="session">Session End:</label>
            </div>

            <button class="btn btn-{{ 'danger' if session.username else 'primary'}}" type="submit" name="{{ 'logout' if session.username else 'login' }}">{{ 'Logout from' if session.username else 'Login from'}} {{remote_ip}}</button>
            {% if session.username %}
            <button class="btn btn-success" type="submit" name="extend">Extend Session</button>
            {% endif %}

        </form>

    </div>

    {% endblock %}

    {% block scripts %}
        {{ bootstrap.load_js() }}
        <script type="text/javascript">var ts = {{ (ts * 1000)|int }};</script>
        <script type="text/javascript" src="{{ url_for('static',filename='app.js') }}"></script>
    {% endblock %}
</main>
<footer class="footer fixed-bottom container">
    <a href="https://github.com/cubinet-code/radius-user-portal" class="text-secondary text-decoration-none float-end mb-3">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
